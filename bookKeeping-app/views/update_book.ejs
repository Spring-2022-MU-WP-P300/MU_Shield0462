<!--include header-->
<%-include('include/_header')%>
<!--/include header-->

<!--main-->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"> <i class="fas fa-angle-double-left"></i> All books</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Book</h2>
            <span class="text-light">Use the below form to update your book.</span>
        </div>
     
         <!--form handling-->
 <form id="update_book" method="POST">
    <div class="new_book">
        <div class="form-group">
            <label for="name" class="text-light">Book Name</label>
            <input type="Hidden" name="id" value="<%= book._id %>">
            <input type="text" name="name" value="<%= book.bookName %>" placeholder="Java Programming">
        </div>
        <div class="form-group">
            <label for="writer name" class="text-light">Writer Name</label>
            <input type="text" name="writer name" value="<%= book.writerName %>" placeholder="Mark Stoinis">
        </div>
        <div class="form-group">
            <label for="price" class="text-light">Price</label>
            <input type="number" name="price" value="<%= book.prize %>" placeholder="350">
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Stutus</label>
            <div class="radio inline">
                <input type="radio" id="status-1" name="status" value="Available"<%= book.status == 'Available' ? 'checked' : '' %>>
                <label for="status-1" class="radio-label" >Available</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="status-2" name="status" value="unavailable"<%= book.status == 'unvailable'?'checked' : '' %>>
                <label for="status-2" class="radio-label">Unavailable</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>
<!--/form handling-->
    </div>
</main>
<!--/main-->

<!--include footer-->
<%-include('include/_footer')%>
<!--/include footer-->