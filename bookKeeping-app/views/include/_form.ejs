 <!--form handling-->
 
 <form action="/api/users" method="POST" id="add_book" >
 <form id="add_book" method="POST">
 
    <div class="new_book">
        <div class="form-group">
            <label for="bookName" class="text-light">Book Name</label>
            <input type="Hidden" name="id" value="">
            <input type="text" name="bookName" value="" placeholder="Java Programming">
        </div>
        <div class="form-group">
            <label for="writerName" class="text-light">Writer Name</label>
            <input type="text" name="writerName" value="" placeholder="Mark Stoinis">
        </div>
        <div class="form-group">
            <label for="prize" class="text-light">Price</label>
            <input type="number" name="prize" value="" placeholder="350">
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Stutus</label>
            <div class="radio inline">
                <input type="radio" id="status-1" name="status" value="Available">
                <label for="status-1" class="radio-label" >Available</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="status-2" name="status" value="unavailable">
                <label for="status-2" class="radio-label">Unavailable</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>
<!--/form handling-->